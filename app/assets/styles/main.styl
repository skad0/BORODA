@import 'https://fonts.googleapis.com/css?family=Open+Sans:400,800';

body {
    font-family: 'Open Sans', sans-serif;
    margin: 0;
    padding: 0;
    width: 100%;
}

.header {    
    &__title {
        text-align: center;
        font-weight: 800;
    }
}

.body {
    width: 100%;
    white-space: nowrap;
}

.col {
    display: inline-block;
    white-space: normal;
    &_size {
        &_small {
            width: 20%;
        }
        &_medium {
            width: 40%;
        }
        &_big {
            width: 60%;
        }
    }
}